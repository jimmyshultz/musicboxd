// This is an EXAMPLE of the buildTypes section to add to your existing android/app/build.gradle
// Add this inside the android { } block, replacing or updating your existing buildTypes

android {
    // ... your existing configuration ...

    buildTypes {
        debug {
            // Your existing debug config
            signingConfig signingConfigs.debug
        }
        
        debugDevelopment {
            initWith debug
            applicationIdSuffix ".dev"
            versionNameSuffix "-dev"
            resValue "string", "app_name", "Resonare Dev"
        }
        
        debugStaging {
            initWith debug
            applicationIdSuffix ".staging"
            versionNameSuffix "-staging"  
            resValue "string", "app_name", "Resonare Staging"
        }
        
        release {
            // Your existing release config
            signingConfig signingConfigs.debug
            minifyEnabled false
            proguardFiles getDefaultProguardFile("proguard-android.txt"), "proguard-rules.pro"
        }
        
        releaseStaging {
            initWith release
            applicationIdSuffix ".staging"
            versionNameSuffix "-staging"
            resValue "string", "app_name", "Resonare Staging"
        }
        
        releaseProduction {
            initWith release
            // Production settings - no suffix for clean bundle ID
            resValue "string", "app_name", "Resonare"
        }
    }
}
