# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'Resonare' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # Add this line for Google Sign-In
  pod 'GoogleSignIn'
  
  # Firebase Crashlytics with specific modular headers for dependencies
  pod 'Firebase/Crashlytics'
  pod 'GoogleUtilities', :modular_headers => true
  pod 'FirebaseCore', :modular_headers => true
  pod 'FirebaseInstallations', :modular_headers => true
  pod 'GoogleDataTransport', :modular_headers => true
  pod 'nanopb', :modular_headers => true
  pod 'FirebaseCoreExtension', :modular_headers => true
  
  # Note: Apple Sign-In (RNAppleAuthentication) is auto-linked by React Native 0.60+

  post_install do |installer|
    # https://github.com/facebook/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )

    # Configure build configurations for environment switching
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # Map new configurations to base configurations
        case config.name
        when 'Debug-Development', 'Debug-Staging'
          config.build_settings = config.build_settings.merge(installer.pods_project.build_configurations.find { |c| c.name == 'Debug' }.build_settings)
        when 'Release-Development', 'Release-Staging'
          config.build_settings = config.build_settings.merge(installer.pods_project.build_configurations.find { |c| c.name == 'Release' }.build_settings)
        end
      end
    end

    # Ensure Firebase Swift modules are properly configured
    installer.pods_project.targets.each do |target|
      if ['FirebaseCoreInternal', 'FirebaseCrashlytics', 'FirebaseSessions', 'GoogleUtilities', 'FirebaseCore', 'FirebaseInstallations', 'GoogleDataTransport', 'nanopb', 'FirebaseCoreExtension'].include?(target.name)
        target.build_configurations.each do |config|
          config.build_settings['DEFINES_MODULE'] = 'YES'
          config.build_settings['SWIFT_VERSION'] = '5.0'
        end
      end
    end
  end
end